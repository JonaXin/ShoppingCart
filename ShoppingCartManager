import java.util.Scanner;
public class ShoppingCartManager {

	public static void printMenu() {
	     System.out.println("MENU");
	     System.out.println("a - Add item to cart");
	     System.out.println("d - Remove item from cart");
	     System.out.println("c - Change item quantity");
	     System.out.println("i - Output items' descriptions");
	     System.out.println("o - Output shopping cart");
	     System.out.println("q - Quit");
	     System.out.println("");
	     System.out.println("Choose an option:");
	}
	
	public static ItemToPurchase getItemToPurchase(Scanner myScanner) {
		ItemToPurchase item = new ItemToPurchase();
		
		System.out.println("ADD ITEM TO CART");
		System.out.println("Enter the item name:");
	    item.setName(myScanner.nextLine());
	    myScanner.nextLine();
	    System.out.println("Enter the item description:");
	    item.setDescription(myScanner.nextLine());
	    System.out.println("Enter the item price:");
	    item.setPrice(myScanner.nextInt());
	    myScanner.nextLine();  
	    System.out.println("Enter the item quantity:");
	    item.setQuantity(myScanner.nextInt());
	    myScanner.nextLine();
	   return item;      
	}
	
	public static void main(String[] args) {
		ShoppingCart customerInfo = new ShoppingCart();
		ItemToPurchase item = new ItemToPurchase();
		Scanner myScanner = new Scanner(System.in);
		
		System.out.println("Enter Customer's Name:");
		customerInfo.setCustomerName(myScanner.nextLine());
		System.out.println("Enter Today's Date:");
		customerInfo.setDate(myScanner.nextLine());
		System.out.println();
		System.out.println("Customer Name: " + customerInfo.getCustomerName());
		System.out.println("Today's Date: " + customerInfo.getDate());
		
		
		String userInput = "-";
		
	      while (!userInput.equals("q")) {
	    	  printMenu();
	          userInput = myScanner.next();

	          if (userInput.equals("a")) {
	             customerInfo.addItem(getItemToPurchase(myScanner));  	   
	          }
	          if (userInput.equals("d")) {
	             
	          }
	             
		      if (userInput.equals("c")) {
			     System.out.println("CHANGE ITEM QUANTITY");
			     System.out.println("Enter the item name:");
			     myScanner.nextLine();
		      }
		      
	          if (userInput.equals("i")) {
	        	  customerInfo.printDescriptions();
	          }
			             
	          if (userInput.equals("o")) {
		         customerInfo.printTotal(); 
	          }
	       }

	}

}
